/* ******************************************************************************* *
 * Write a program that prints out a text-based triangle (of whatever form).       *
 * This program should take input from the user to get a single integer,           *
 * used to directly specify the length of two of the sides.                        *
 * For more fun... Make something of a functional menu after drawing the triangle. *
 * Have your program detect bad numerical input.                                   *
 * ******************************************************************************* */

#include<iostream>
using namespace std;
int main()
{
	int i, j, row;
	char s, a;
	cout << "Enter amount of rows: ";
	cin >> row;
	cout << "Enter symbol: ";
	cin >> s;
	cout << "\n";

	for(int i=1; i<=row; ++i){
        for(int j=1; j<=i; ++j)
            {
                cout << s;
            }
        cout << endl;
    }
	if(row < 0){
		{
			cout << "Invalid input. Please enter a positive integer next time.";
		}
		cout << endl;
	}
	cout << "Continue? (Y/N)";
	cout << endl;
	cin >> a;
	if(a == 'N')
			{
			cout << "Goodbye.";
			return 0;
			}
	else if(a == 'Y')
	{
	while(a == 'Y')
	{
		int i, j, row;
		char s, a;
		cout << "Enter amount of rows: ";
		cin >> row;
		cout << "Enter symbol: ";
		cin >> s;
		cout << "\n";

		for(int i=1; i<=row; ++i){
	        for(int j=1; j<=i; ++j)
	            {
	                cout << s;
	            }
	        cout << endl;
	    }
		if(row < 0){
			{
				cout << "Invalid input. Please enter a positive integer next time.";
			}
			cout << endl;
		}
		cout << "Continue? (Y/N)";
		cout << endl;
		cin >> a;
		if(a == 'N')
					{
					cout << "Goodbye.";
					return 0;
					}
	}
	}
	return 0;
	}
