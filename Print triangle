#include<iostream>
using namespace std;
int main()
{
	int i, j, row;
	char s, a;
	cout << "Enter amount of rows: ";
	cin >> row;
	cout << "Enter symbol: ";
	cin >> s;
	cout << "\n";

	for(int i=1; i<=row; ++i){
        for(int j=1; j<=i; ++j)
            {
                cout << s;
            }
        cout << endl;
    }
	if(row < 0){
		{
			cout << "Invalid input. Please enter a positive integer next time.";
		}
		cout << endl;
	}
	cout << "Continue? (Y/N)";
	cout << endl;
	cin >> a;
	if(a == 'N')
			{
			cout << "Goodbye.";
			return 0;
			}
	else if(a == 'Y')
	{
	while(a == 'Y')
	{
		int i, j, row;
		char s, a;
		cout << "Enter amount of rows: ";
		cin >> row;
		cout << "Enter symbol: ";
		cin >> s;
		cout << "\n";

		for(int i=1; i<=row; ++i){
	        for(int j=1; j<=i; ++j)
	            {
	                cout << s;
	            }
	        cout << endl;
	    }
		if(row < 0){
			{
				cout << "Invalid input. Please enter a positive integer next time.";
			}
			cout << endl;
		}
		cout << "Continue? (Y/N)";
		cout << endl;
		cin >> a;
		if(a == 'N')
					{
					cout << "Goodbye.";
					return 0;
					}
	}
	}
	return 0;
	}
